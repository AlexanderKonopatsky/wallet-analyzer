# Cielo Finance API Keys
# Primary key (required)
CIELO_API_KEY=your_cielo_api_key_here

# Additional keys for rotation (optional, up to 99)
# Uncomment and add your keys if you have multiple
# CIELO_API_KEY_1=your_second_key
# CIELO_API_KEY_2=your_third_key
# CIELO_API_KEY_3=your_fourth_key

# OpenRouter API Key (required for AI analysis)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Google OAuth (required for authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Secret (required - generate a random string)
# Example: openssl rand -hex 32
JWT_SECRET=your_random_jwt_secret_here

# Analysis Settings (optional)
# Number of recent analyses to include in full context (default: 1)
FULL_CHRONOLOGY_COUNT=1
# Target max transactions per analysis chunk (default: 30)
CHUNK_MAX_TRANSACTIONS=30
COST_PER_1000_TX=0.20
COST_MULTIPLIER=1.0

# Profile cost estimation settings (optional)
# Estimated profile cost = (PROFILE_COST_BASE_USD + words * PROFILE_COST_PER_WORD_USD) * COST_MULTIPLIER
PROFILE_COST_BASE_USD=0.03686
PROFILE_COST_PER_WORD_USD=0.000005846

# Auto-refresh settings (optional)
# Enable automatic wallet refresh at scheduled time
AUTO_REFRESH_ENABLED=false
# Time to run auto-refresh in UTC (24-hour format, e.g., "23:00" for 11 PM UTC)
AUTO_REFRESH_TIME=23:00

# Data backup/import settings (optional)
# Comma-separated admin emails allowed to export/import full data backup.
# Leave empty to allow any authenticated user.
DATA_BACKUP_ADMIN_EMAILS=
# Maximum accepted ZIP size for import endpoint (in MB)
DATA_IMPORT_MAX_MB=2048

# Context compression settings (optional)
CONTEXT_COMPRESSION_ENABLED=true
# In optimized tx-window mode, keep this false to avoid many small compression calls
CONTEXT_COMPRESSION_WITH_WINDOW_ENABLED=false
CONTEXT_DAILY_COUNT=30
CONTEXT_WEEKLY_COUNT=30
CONTEXT_TIER2_GROUP_SIZE=5
CONTEXT_TIER3_SUPER_SIZE=3

# Optimized context window (optional, keeps old behavior when disabled)
CONTEXT_OPTIMIZED_WINDOW_ENABLED=false
# Keep day summaries covering approximately this many most recent transactions
CONTEXT_WINDOW_TX_COUNT=200
# Keep up to this many old days with high importance even if out of tx window
CONTEXT_IMPORTANCE_ANCHORS=20
# Minimum importance score (1-5) to be kept as anchor
CONTEXT_IMPORTANCE_MIN=4
# Fallback tx/day used when day count is not available
CONTEXT_TX_FALLBACK_PER_DAY=1

# Payment settings (1Click)
# Where incoming swaps should be delivered
RECEIVE_ADDRESS=your_receive_wallet_address_here
# Destination token in format chain:token (default is base:usdc)
RECEIVE_TOKEN=base:usdc
# Optional JWT token for 1Click API (if provider/account requires auth)
ONECLICK_JWT=

# Railway (auto-injected, don't set manually)
# PORT=8000
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app
